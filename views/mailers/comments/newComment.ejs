<div class="container bg-light">
    <div class="row">
        <div class="col d-flex justify-content-center">
            <h2>New Comment on your post by <%= comment.user.name %></h2>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= comment.user.name %></h5>
                  <i class="fas fa-quote-left"></i>
                  <p class="card-text text-brown" ><%= comment.content %></p>
                  <i class="fas fa-quote-right"></i>
                  <a href="http://localhost:8000/users/feed" class="btn btn-outline-light">Reply</a>
                </div>
              </div>

        </div>
    </div>
